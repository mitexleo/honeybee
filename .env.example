# Environment Configuration for Nextcloud Honeypot
# Copy this file to .env and update the values for your deployment

# Database Configuration
HONEYPOT_DB_PATH=honeypot.db
MAX_LOG_SIZE=10485760
BACKUP_COUNT=5

# Admin Authentication (CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_immediately

# Application Security
SECRET_KEY=generate_a_random_32_character_hex_string_here
MAX_CONTENT_LENGTH=1048576

# Rate Limiting
RATE_LIMIT=100 per hour

# Logging Configuration
HONEYPOT_LOG_FILE=honeypot.log

# GeoIP Database (optional)
GEOIP_DB_PATH=GeoLite2-City.mmdb

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=false
WORKERS=4

# Caddy Configuration (update with your domain)
DOMAIN=your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# Production Deployment
FLASK_ENV=production
PYTHONPATH=/path/to/your/honeypot

# Database Encryption (recommended for production)
# DB_ENCRYPTION_KEY=your-database-encryption-key-here

# Monitoring and Alerting
# WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
# ALERT_THRESHOLD=10

# Backup Configuration
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=30
# BACKUP_PATH=/backups/honeypot

# Security Headers
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self'; font-src 'self'; object-src 'none'; media-src 'none'; frame-src 'none';

# Legal and Compliance
# DATA_RETENTION_DAYS=90
# PRIVACY_POLICY_URL=https://your-domain.com/privacy
# TERMS_OF_SERVICE_URL=https://your-domain.com/terms
