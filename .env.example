# Environment Configuration for Nextcloud Honeypot
# Copy this file to .env and update the values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# Database
HONEYPOT_DB_PATH=data/honeypot.db
HONEYPOT_LOG_FILE=honeypot.log

# Admin Credentials (required)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_immediately

# JWT Secret (required)
JWT_SECRET=your_jwt_secret_key_here

# GeoIP Database
GEOIP_DB_PATH=GeoLite2-City.mmdb

# Limits
MAX_LOG_SIZE=10485760
BACKUP_COUNT=5

# Optional: Hashing secret
SECRET_KEY=random_secret_key_for_hashing
